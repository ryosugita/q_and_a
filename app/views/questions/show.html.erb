<p>質問者　<%= link_to @question.user.name, user_path(@question.user) %>さん</p>
<p class="text-right"><%= @question.updated_at %></p>
<h2><%= @question.content %></h2>

<% if current_user == @question.user %>
<%= link_to "削除する", @question, method: :delete, class: 'btn btn-danger btn-sm' %>
<% end %>

<table class="table table-striped">
    <thead>
        <tr>
            <th>回答者</th>
            <th>回答内容</th>
            <th>回答日時</th>
        </tr>
    </thead>
    <tbody>
        <% @question.answers.each do |answer| %>
        <tr>
            <td><%= answer.user.name %>さん</td>
            <td><%= answer.content %></td>
            <td><%= answer.updated_at %></td>
        </tr>
        <% end %>
    </tbody>
</table> 


<% if logged_in? %>
<%= render "answers/answer" %>
<% end %>
